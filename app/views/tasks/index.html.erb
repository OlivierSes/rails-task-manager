<div class= "banner">
<h1>Please find all your tasks below</h1>
</div>
<ul>
<% @tasks.each do |task| %>
  <div class="row">
    <div class="container fixed-heigth fixed-width-large container-inline">
    <div class="flex-box">
      <li class="super-list fixed-width"> <%= task.name %> </li>
      <% if task.done == true %>
        <i class="fa fa-check" aria-hidden="true" style = "color: green !important;"></i>
        <% else %>
        <i class="fa fa-times" aria-hidden="true" style = "color: red !important;"></i>
        <%end%>
    </div>
    </div>
    <div class="container" style="margin-left: 0px; padding-left: 0px; margin-top: 15px;">
    <%= link_to "details", task_path(task.id), class: "btn btn-default btn-fixed-width" %>
    <%= link_to "delete task", task_path(task.id), method: :delete , class: "btn btn-default btn-fixed-width" %>
    <%= link_to "update", edit_task_path(task.id), class: "btn btn-default btn-fixed-width" %>
    <%= link_to "mark as done", mark_as_done_path(task.id), class: "btn btn-default btn-fixed-width", method: :put %>
    </div>
  </div>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "btn btn-default btn-fixed-width btn-last" %>




